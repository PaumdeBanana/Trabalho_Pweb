    <script>
        function logar() {
            let escolha = document.getElementById("inputEscolha").value;
            let senha = document.getElementById("inputPassword4").value;
            let email = document.getElementById("inputEmail4").value;
            let endereco = document.getElementById("inputAddress").value;
            let referencia = document.getElementById("inputAddress2").value;
            let estado = document.getElementById("inputState").value;
            let cidade = document.getElementById("inputCity").value;
            let cep = document.getElementById("inputZip").value;
            let verificacao = document.getElementById("gridCheck").value;
            if (escolha == 1) {
                if (senha.length < 1 || email.length < 1 || endereco.length < 1 || referencia.length < 1 || estado == 'Escolha...' || cidade.length < 1 || cep.length < 1 || verificacao == null) {
                    alert('Erro, verifique se nenhum dos campos está vazio(Cliente)');
                } else {
                    alert('Sucesso, você foi cadastrado(Cliente)');
                }
            }
            else if (escolha == 2) {
                if (senha.length < 1 || email.length < 1 || endereco.length < 1 || referencia.length < 1 || estado == 'Escolha...' || cidade.length < 1 || cep.length < 1 || verificacao == null) {
                    alert('Erro, verifique se nenhum dos campos está vazio(Empresa)');
                } else {
                    alert('Sucesso, você foi cadastrado(Empresa)');
                }
            }
            else {
                alert('Erro, verifique escolha o seu tipo de cadastro!');
            }
        }
    </script>

